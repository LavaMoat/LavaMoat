{
  "root": true,
  "overrides": [
    {
      "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
      },
      "files": [
        "src/**/*.js"
      ],
      "extends": [
        "@metamask/eslint-config-nodejs"
       ],
        "rules": {
          "jsdoc/require-jsdoc": 0,
          "node/no-process-env": 0,
          "node/no-process-exit": 0,
          "node/no-sync": 0,
          "quotes": ["error", "single"],
          "semi": ["error", "never"]
        }
    },
    {
      "files": [
        "test/**/*.js",
        "src/**/*.test.js"
      ],
      "extends": [
        "plugin:ava/recommended"
      ],
      "rules": {
        "ava/no-import-test-files": "off"
      }
    }
  ],
  "env": {
    "es6": true
  }
}
