{
  "extends": "../../../.config/tsconfig.src.json",
  "compilerOptions": {
    "outDir": "../types",
    "rootDir": "..",
    "paths": {
      "lavamoat-core": ["../../core/types/src/types.d.ts"],
      "#compartment/*": ["./compartment/*.js"],
      "#exec/*": ["./exec/*.js"],
      "#policy-gen/*": ["./policy-gen/*.js"],
      "#constants": ["./constants.js"],
      "#util": ["./util.js"],
      "#log": ["./log.js"],
      "#policy-util": ["./policy-util.js"],
      "#types": ["./types.ts"],
      "#internal": ["./internal.js"]
    },
    "target": "esnext",
    "module": "NodeNext",
    "types": ["node", "ses"],
    "strict": true,
    "stripInternal": true,
    "preserveSymlinks": true
  },
  "include": ["."],
  "references": [{ "path": "../../core/tsconfig.json" }]
}
