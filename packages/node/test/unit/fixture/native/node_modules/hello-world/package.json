{
  "name": "hello_world",
  "version": "0.0.0",
  "description": "Node.js Addons Example #1",
  "main": "hello.js",
  "private": true,
  "dependencies": {
    "node-gyp-build": "4.8.4"
  },
  "scripts": {
    "install": "node-gyp-build",
    "build": "npm run build:darwin && npm run build:win32 && npm run build:linux",
    "prebuildify": "npx prebuildify --napi --strip --target 18.13.0",
    "build:darwin": "npm run prebuildify -- --platform darwin --arch arm64",
    "build:win32": "npm run prebuildify -- --platform win32 --arch x64",
    "build:linux": "npm run prebuildify -- --platform linux --arch x64",
    "test": "node hello.js"
  },
  "gypfile": true
}
