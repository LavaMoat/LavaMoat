{
  "name": "@lavamoat/yarn-plugin-allow-scripts",
  "version": "1.0.0",
  "description": "A Yarn plugin for running `@lavamoat/allow-scripts` after install",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LavaMoat/LavaMoat.git",
    "directory": "packages/yarn-plugin-allow-scripts"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^16.20.0 || ^18.0.0 || ^20.0.0 || ^22.0.0",
    "yarn": "^4.4.1"
  },
  "main": "./src/index.ts",
  "scripts": {
    "build": "node scripts/build.js",
    "rebuild": "npm run build",
    "test": "npm run build && ava"
  },
  "peerDependencies": {
    "@lavamoat/allow-scripts": ">=3.0.4",
    "@lavamoat/preinstall-always-fail": "*",
    "@yarnpkg/cli": "^4.4.1",
    "@yarnpkg/core": "4.1.2"
  },
  "dependencies": {},
  "devDependencies": {
    "@lavamoat/allow-scripts": "3.2.0",
    "@lavamoat/preinstall-always-fail": "2.1.0",
    "@septh/ts-run": "1.2.6",
    "@yarnpkg/builder": "4.2.0",
    "@yarnpkg/cli": "4.4.1",
    "@yarnpkg/core": "4.1.2",
    "@yarnpkg/shell": "4.0.2",
    "ava": "6.1.3",
    "corepack": "0.29.4",
    "npm-run-path": "6.0.0"
  },
  "ava": {
    "files": [
      "test/*.spec.mts"
    ],
    "timeout": "30s",
    "environmentVariables": {
      "YARN_ENABLE_HARDENED_MODE": "0"
    },
    "extensions": {
      "ts": "module",
      "mts": "module",
      "cts": "commonjs"
    },
    "nodeArguments": [
      "--import=@septh/ts-run/register"
    ]
  }
}
