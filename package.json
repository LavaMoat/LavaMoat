{
  "name": "lavamoat-monorepo",
  "private": true,
  "overrides": {
    "type-fest": "^2.19.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@tsconfig/node14": "^14.1.0",
    "@types/node": "^20.4.1",
    "@types/yargs": "^17.0.24",
    "ava": "^5.3.1",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-ava": "^14.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-react": "^7.33.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.4",
    "typescript": "^5.1.6",
    "lint-staged": "^13.2.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "npm --workspaces test",
    "test:prep": "lerna run test:prep",
    "lint": "npm run lint:eslint && npm run lint:deps",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:deps": "lerna run lint:deps",
    "build": "npm -w @lavamoat/lavapack -w @lavamoat/viz -w @lavamoat/yarn-plugin-allow-scripts run build && npm run build:types",
    "build:types": "tsc -b",
    "clean:types": "tsc -b --clean",
    "watch:types": "tsc -b --watch",
    "rebuild": "npm -w @lavamoat/lavapack -w @lavamoat/viz -w @lavamoat/yarn-plugin-allow-scripts run rebuild",
    "rebuild:types": "npm run clean:types; npm run build:types",
    "lint:staged": "lint-staged",
    "lint:commit": "commitlint",
    "postinstall": "husky install",
    "prepublishOnly": "cross-env NODE_ENV=production npm run rebuild && npm run test:prep && npm run test",
    "publish": "lerna publish",
    "setup": "allow-scripts"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0",
  "lavamoat": {
    "allowScripts": {
      "lerna>nx": false,
      "lerna>nx>@parcel/watcher": false,
      "$root$": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "ava": {
    "files": [
      "packages/*/test/*.spec.js"
    ],
    "timeout": "2m"
  }
}
